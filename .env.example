# AWS Exam Agent 環境設定例
# このファイルを .env にコピーして実際の値を設定してください

# 基本設定
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# AWS 設定
AWS_REGION=ap-northeast-1
AWS_PROFILE=default

# DynamoDB 設定
DYNAMODB_TABLE_NAME=aws-exam-agent-questions-dev
DYNAMODB_REGION=ap-northeast-1

# Bedrock 設定
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4000
BEDROCK_TEMPERATURE=0.7

# Teams 設定（実際の値に置き換えてください）
# TEAMS_WEBHOOK_URL=https://your-organization.webhook.office.com/webhookb2/...
# TEAMS_CHANNEL_ID=19:your-channel-id@thread.tacv2

# MCP 設定
MCP_AWS_DOCS_SERVER_ENABLED=true
MCP_AWS_KNOWLEDGE_SERVER_ENABLED=true
MCP_SERVER_TIMEOUT=30

# キャッシュ設定
CACHE_TTL_SECONDS=3600
MEMORY_CACHE_MAX_SIZE=100

# 問題生成設定
QUESTION_GENERATION_MAX_RETRIES=3
QUALITY_THRESHOLD=0.8
SIMILARITY_THRESHOLD=0.7

# AgentCore 設定
AGENTCORE_RUNTIME_NAME=aws-exam-agent-runtime
AGENTCORE_AGENT_NAME=supervisor-agent
AGENTCORE_TIMEOUT=300

# Lambda 設定
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512
API_GATEWAY_STAGE=prod
API_KEY_REQUIRED=true